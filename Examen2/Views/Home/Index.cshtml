@{
    ViewBag.Title = "Estudiantes";
}

<div class="content-wrapper" ng-controller="EstudiantesController" data-ng-init="obtenerEstudiantes()">
    <div ng-show="MostrarVista == 0;">
        <section class="content-header">
            <h1> Estudiantes </h1>
            <ol class="breadcrumb">
                <li class="active"> Estudiantes </li>
            </ol>
        </section>

        <section class="content reloadPage">
            <div class="box box-primary"></div>

            <div class="box">
                <div class="box-header">
                    <span style="font-weight:bold; font-size: 15px;">Total:</span>&nbsp;&nbsp;<span style="font-size: 16px;" ng-bind="totalEstudiantes"></span>
                    <button ng-click="graficarCalificaciones()">Graficar calificaciones</button>
                    <button ng-click="subirArchivoImportacion()">Importar archivo</button>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-sm table-striped table-hover compact">
                        <thead>
                            <tr>
                                <th> NOMBRE </th>
                                <th> APELLIDO PATERNO </th>
                                <th> APELLIDO MATERNO </th>
                                <th> FECHA NACIMIENTO </th>
                                <th> GRADO </th>
                                <th> GRUPO </th>
                                <th> CALIFICACIÓN </th>
                                <th> CLAVE </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="d in listaEstudiantes track by $index">
                                <td ng-bind="d.Nombres"></td>
                                <td ng-bind="d.ApellidoPaterno"></td>
                                <td ng-bind="d.ApellidoMaterno"></td>
                                <td ng-bind="d.FechaNacimiento_String"></td>
                                <td ng-bind="d.Grado"></td>
                                <td ng-bind="d.Grupo"></td>
                                <td ng-bind="d.Calificacion"></td>
                                <td ng-bind="d.Clave"></td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </section>


        <div id="myModalImportarArchivo" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body">
                        <input type="file" id="FileUpload1" />
                        <input type="button" id="btnUpload" value="Upload Files" />
                        <button id="btnGuardarInfo" ng-click="GuardarListaSessionStorage()" hidden></button>
                    </div>
                    <div class="modal-footer">
                        <button id="btnCargarArchivosColaborador" class="btn btn-sm btn-success">Subir archivo</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>

            </div>
        </div>


    </div>




    @Html.Action("Grafica", "Home")
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#btnUpload').click(function () {

            // Checking whether FormData is available in browser
            if (window.FormData !== undefined) {

                var fileUpload = $("#FileUpload1").get(0);
                var files = fileUpload.files;

                // Create FormData object
                var fileData = new FormData();

                // Looping over all files and add it to FormData object
                for (var i = 0; i < files.length; i++) {
                    fileData.append(files[i].name, files[i]);
                }

                // Adding one more key to FormData object
                fileData.append('username', 'Manas');

                $.ajax({
                    url: '/Home/ImportarDatos',
                    type: "POST",
                    contentType: false, // Not to set any content header
                    processData: false, // Not to process data
                    data: fileData,
                    success: function (result) {
                        const myObjStr = JSON.stringify(result);

                        sessionStorage.setItem('listaEstudiantes', myObjStr);

                        $('#btnGuardarInfo').click();
                    },
                    error: function (err) {
                        alert(err.statusText);
                    }
                });
            } else {
                alert("FormData is not supported.");
            }
        });
    });
</script> 